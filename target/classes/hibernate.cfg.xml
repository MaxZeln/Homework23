<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>

        <property name="connection.driver_class">org.postgresql.Driver</property>
        <property name="connection.url">jdbc:postgresql://localhost:5432/bookStore</property>
        <property name="connection.username">postgres</property>
        <property name="connection.password">Leader_-1972</property>

        <property name="connection.pool_size">1</property>
        <property name="dialect">org.hibernate.dialect.PostgreSQL82Dialect</property>
        <property name="show_sql">true</property>

        <mapping class="ru.learnup.homework23.db.model.Author"/>
        <mapping class="ru.learnup.homework23.db.model.Book"/>
        <mapping class="ru.learnup.homework23.db.model.Book_Warehouse"/>
        <mapping class="ru.learnup.homework23.db.model.Buyer"/>
        <mapping class="ru.learnup.homework23.db.model.Order"/>
        <mapping class="ru.learnup.homework23.db.model.Order_Details"/>

    </session-factory>
</hibernate-configuration>
